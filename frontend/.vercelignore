{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "nodeVersion": "18.x",
  "installCommand": "npm install",
  "env": {
    "VITE_API_URL": "@vite_api_url"
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://note-app-backend.onrender.com/api/$1"
    }
  ]
}
